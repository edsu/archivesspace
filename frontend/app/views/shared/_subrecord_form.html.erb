<%
  singular = name.to_s.singularize
  section_id = name.to_s if section_id.blank?
  heading_size = "h3"

%>
<section id="<%= section_id %>" class="subrecord-form" data-subrecord-form="true" data-object-name="<%= singular %>" data-template-id="<%= template_name %>">

  <<%= heading_size %> class="subrecord-form-heading">
    <%= I18n.t("#{singular}._html.plural") %>
    <input type="button" class="btn btn-small pull-right" value="Add <%= I18n.t("#{singular}._html.singular") %>"/>
  </<%= heading_size %>>

  <div class="subrecord-form-container">
    <% if form[name].blank? %>

      <p class="alert alert-info">Click 'Add <%= I18n.t("#{singular}._html.singular") %>' to add a <%= I18n.t("#{singular}._html.singular") %> record.</p>

    <% else %>

      <%= form.list_for(form[name], "#{name}[]") do |item| %>
        <% form.emit_template(template_name, item) %>
      <% end %>

    <% end %>
  </div>

</section>