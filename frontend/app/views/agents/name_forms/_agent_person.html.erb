<% define_template "agent_person_name" do |form| %>
  <div class="subrecord-form-fields">
    <%= form.label_and_textfield "authority_id" %>
    <%= form.label_and_textfield "source" %>
    <%= form.label_and_textfield "rules" %>
    <hr/>
    <%= form.label_and_textfield "direct_order" %>
    <%= form.label_and_textfield "prefix" %>
    <%= form.label_and_textfield "title" %>
    <%= form.label_and_textfield "primary_name" %>
    <%= form.label_and_textfield "rest_of_name" %>
    <%= form.label_and_textfield "suffix" %>
    <%= form.label_and_textfield "fuller_form" %>
    <%= form.label_and_textfield "number" %>
    <%= form.label_and_textfield "dates" %>
    <hr/>
    <%= form.label_and_textfield "qualifier" %>
    <div class="control-group">
      <%= form.label("sort_name") %>
      <div class="controls">
        <%= form.textfield "sort_name", form["sort_name"], :readonly => "readonly" %>
        <label><%= form.checkbox "automatic" %> <small>Automatically generate?</small></label>
      </div>
    </div>
    <hr/>
    <%= form.label_and_textfield "description_type" %>
    <%= form.label_and_textfield "description_note" %>
    <%= form.label_and_textfield "description_citation" %>
  </div>
<% end %>
