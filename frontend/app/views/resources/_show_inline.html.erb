<div class="row-fluid">
  <div class="span3">
    <%= render :partial => "resources/sidebar" %>
  </div>
  <div class="span9 record-pane">
    <div class="btn-group" style="float: right">
      <%= link_to "Edit", {:controller => :resources, :action => :edit, :id => @resource.id, :anchor => "resource_#{@resource.id}"}, :class => "btn btn-small" %>
    </div>
    <h2><%= @resource.title %> <span class="label label-info">Resource</span></h2>
    <section id="basic_information">
      <h3>Basic Information</h3>
      <div class="row-fluid label-and-value">
          <div class="span3">Title</div>
          <div class="span9"><%= @resource.title %></div>
       </div>
       <div class="row-fluid label-and-value">
          <div class="span3">Identifier</div>
          <div class="span9 identifier-display">
             <span class="identifier-display-part"><%= @resource.id_0 %></span><span class="identifier-display-part"><%= @resource.id_1 %></span><span class="identifier-display-part"><%= @resource.id_2 %></span><span class="identifier-display-part"><%= @resource.id_3 %></span>
          </div>
       </div>
       <% if @resource.subjects %>
       <hr/>
       <div class="row-fluid label-and-value">
          <div class="span3">Subjects</div>
          <div class="span9">
             <% @resource["resolved"]["subjects"].each do | subject | %>
                <div class="token">
                   <%= Subject.from_hash(subject).display_string %>
                </div>
             <% end %>
          </div>
       </div>
       <% end %>
    </section>

    <section id="extent">
      <h3>Extent</h3>
      <div class="accordion" id="extent_accordion">
        <% @resource.extents.each_with_index do | extent, index | %>
          <div class="accordion-group">
            <div class="accordion-heading">
              <div class="row-fluid">
                <div class="span1">
                  <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#extent_accordion" href="#extent_<%= index %>"><span class="icon-chevron-right"></span><span class="icon-chevron-down"></span></a>
                </div>
                <div class="span4 accordion-toggle" data-toggle="collapse" data-parent="#extent_accordion" href="#extent_<%= index %>">
                  <%= "#{extent['number']} #{I18n.t('extent.'+extent['extent_type'])}"%>
                </div>
                <div class="span7 accordion-toggle">
                  <%= extent['container_summary'] %>
                </div>
              </div>
            </div>
            <div id="extent_<%= index %>" class="accordion-body collapse">
              <div class="row-fluid label-and-value">
                <div class="span3 offset1" ><%= I18n.t('extent.portion') %></div>
                <div class="span8"><%= I18n.t('extent.'+extent["portion"]) %></div>
              </div>
              <div class="row-fluid label-and-value">
                <div class="span3 offset1"><%= I18n.t('extent.number') %></div>
                <div class="span8"><%= extent['number'] %></div>
              </div>
              <div class="row-fluid label-and-value">
                <div class="span3 offset1"><%= I18n.t('extent.extent_type') %></div>
                <div class="span8"><%= I18n.t('extent.'+extent["extent_type"]) %></div>
              </div>
              <div class="row-fluid label-and-value">
                <div class="span3 offset1"><%= I18n.t('extent.container_summary') %></div>
                <div class="span8"><%= extent['container_summary'] %></div>
              </div>
              <div class="row-fluid label-and-value">
                <div class="span3 offset1"><%= I18n.t('extent.physical_details') %></div>
                <div class="span8"><%= extent['physical_details'] %></div>
              </div>
              <div class="row-fluid label-and-value">
                <div class="span3 offset1"><%= I18n.t('extent.dimensions') %></div>
                <div class="span8"><%= extent['dimensions'] %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
