<div class="subrecord-form-fields">

  <div class="control-group ">
    <label class="control-label">Note Type</label>
    <div class="controls label-only">
      <strong>Bibliography</strong>
    </div>
  </div>

  <%= f.jsonmodel_hidden_field :jsonmodel_type, "note_bibliography" %>
  <%= f.jsonmodel_hidden_field :type, "Bibliography" %>
  <%= f.label_and_field :label %>
  <%= f.label_and_textarea :content %>

  <div class="control-group">
    <label class="control-label">Items</label>
    <div class="controls">
      <div><textarea id="<%= f.current_name "items" %>[0]" name="<%= f.current_name "items" %>[0]" size="30" type="text" rows="3"></textarea></div>
      <div style="padding-top: 10px"><textarea id="<%= f.current_name "items" %>[1]" name="<%= f.current_name "items" %>[1]" size="30" type="text" rows="3"></textarea></div>
    </div>
  </div>

</div>
